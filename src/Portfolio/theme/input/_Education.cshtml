@{
    var model = Outputs.Get($"{Context.GetString("ProfileSources")}education.yml");
    var suffix = Document.GetLink().Contains("/ja/") ? "Ja" : "En";
    var bachelor = model.GetString($"Bachelor{suffix}");
    var master = model.GetString($"Master{suffix}");
}

<div class="card c-card m-3 shadow-sm">
    <div class="card-header c-card__header">EDUCATION</div>
    <div class="card-body c-card__body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @Html.Raw(master)
            </li>
            <li class="list-group-item">
                @Html.Raw(bachelor)
            </li>
        </ul>
    </div>
</div>
