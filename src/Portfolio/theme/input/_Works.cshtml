<div class="card c-card m-3 shadow-sm">
    <div class="card-header c-card__header">WORKS</div>
    <div class="row row-cols-md-2 p-3 g-3">
        @foreach (var work in Outputs
            .FromPipeline("Data")
            .FilterSources(Document.GetList<string>("WorkSources"))
            .OrderByDescending(x => x.GetDateTime(WebKeys.Published)))
        {
            @await Html.PartialAsync("_WorkItem.cshtml", work)
        }
    </div>
</div>
